<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.homey.Decision"
    android:layout_marginTop="16dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/landlord"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_marginBottom="20dp"
            android:text="Host"
            android:background="#77dab3"
            android:textSize="25dp"/>

        <Button
            android:id="@+id/tenant"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:text="Traveller"
            android:textSize="25dp"
            android:background="#eaa5f1"
            android:layout_marginBottom="50dp"/>

        <Button
            android:id="@+id/expirence_btn"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_marginBottom="20dp"
            android:text="Expirence"
            android:background="#909edc"
            android:textSize="25dp"/>
    </LinearLayout>

</RelativeLayout>
